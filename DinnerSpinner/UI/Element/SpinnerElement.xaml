<UserControl x:Class="DinnerSpinner.UI.Element.SpinnerElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DinnerSpinner.UI.Element"
             xmlns:vm="clr-namespace:DinnerSpinner.UI.ViewModel"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:SpinnerViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid
        Width="{Binding Width}"
        Height="{Binding Height}">
        
        <Canvas 
                Width="{Binding Width}"
                Height="{Binding Height}">
            <Ellipse                
                Fill="Black"
                Stretch="Uniform"
                HorizontalAlignment="Center"
                Width="{Binding Width}"
                Height="{Binding Height}"/>
            <Polygon Points="100,100 100,0 0,0" Fill="Blue"/>
        </Canvas>
    </Grid>
</UserControl>
